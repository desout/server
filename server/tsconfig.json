{
  "compilerOptions": {
    "baseUrl": "../",
    "target": "ES2017",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2017"
    ],
    "sourceMap": true,
    "outDir": "../build",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "../../client",
    "__tests__"
  ]
}
